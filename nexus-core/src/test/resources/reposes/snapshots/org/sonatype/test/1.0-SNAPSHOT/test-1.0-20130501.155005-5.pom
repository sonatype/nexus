          <!--<serverId>staging-nexus</serverId>-->
          <!--<nexusUrl>http://localhost:8081/nexus/</nexusUrl>-->

          <!--&lt;!&ndash; explicit matching using the staging profile id &ndash;&gt;-->
          <!--<stagingProfileId>12f36b985ec40644</stagingProfileId>-->

        <!--</configuration>-->
      <!--</plugin>-->
    </plugins>
  </build>

</project>
