				<annotation>@javax.xml.bind.annotation.XmlRootElement( name = "capability-types" )</annotation>
				<annotation>@javax.xml.bind.annotation.XmlAccessorType(javax.xml.bind.annotation.XmlAccessType.FIELD)</annotation>
