<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!-- Parent POM -->
  <parent>
    <groupId>org.sonatype.nexus.tools</groupId>
    <artifactId>nexus-migration-tool</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>

  <!-- the version of maven's project object model -->
  <modelVersion>4.0.0</modelVersion>

  <!-- a unique name for this project -->
  <artifactId>nexus-repository-conversion-tool</artifactId>

  <!-- POM packaging -->
  <packaging>jar</packaging>

  <!-- a short but descriptive name for the project -->
  <name>Nexus : Migration Tools : Repository Conversion</name>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.sisu</groupId>
      <artifactId>sisu-inject-plexus</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-cli</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit-dep</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-common</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-component-metadata</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>
              src/main/assembly/repository-conversion-cli-assembly.xml
                        </descriptor>
          </descriptors>
          <archive>
            <manifest>
              <mainClass>
                org.sonatype.nexus.tools.repository.RepositoryConvertorCli
                            </mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
