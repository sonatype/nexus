    <class>
      <name>CRepository</name>
      <version>1.4.0+</version>
      <description>The Nexus repository model.</description>
      <fields>
        <field>
          <name>id</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>Repository ID. It should uniquely identify this repository across Nexus.</description>
          <required>true</required>
        </field>
        <field>
          <name>name</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>Human readable Repository name.</description>
          <required>true</required>
        </field>
        <field>
          <name>providerRole</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The type of repository.</description>
          <required>true</required>
        </field>
        <field>
          <name>providerHint</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The implementation of repository.</description>
          <required>true</required>
        </field>
        <field>
          <name>pathPrefix</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>Path prefix, used by router, to form the URL where this repository will be published.</description>
          <required>false</required>
        </field>
        <field>
          <name>localStatus</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The local status of repository.</description>
          <required>true</required>
        </field>
        <field>
          <name>notFoundCacheActive</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, NFC will be used. If false, no miss caching will happen.
          </description>
          <required>true</required>
        </field>
        <field>
          <name>notFoundCacheTTL</name>
          <version>1.4.0+</version>
          <type>int</type>
          <description>
            NotFoundCache, the neg-cache records time to live in minutes. How long will misses be cached.
          </description>
          <required>true</required>
        </field>
        <field>
          <name>userManaged</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, repository is user managed, and it is allowed to be edited/dropped by users.
          </description>
          <required>true</required>
        </field>
        <field>
          <name>exposed</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, repository is exposed at content.
          </description>
          <required>true</required>
        </field>
        <field>
          <name>browseable</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, repository is browseable on UI/DAV. With any value repository will still properly serve
            Maven clients.
          </description>
          <required>true</required>
        </field>
        <!--
          <field> <name>allowWrite</name> <version>1.4.0+</version>
          <type>boolean</type> <description> If true, repository will
          deny any kind of deployment (write) request. Caching will
          still work. </description> <required>true</required> </field>
        -->
        <field>
          <name>writePolicy</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The policy of the repositories write capability, i.e. (ALLOW_WRITE, ALLOW_WRITE_ONCE, READ_ONLY).</description>
          <required>true</required>
        </field>
        <field>
          <name>indexable</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, repository will get indexed. If false, the files and artifacts from repository will NOT
            be indexed (no index will be maintained for this repository).
          </description>
          <required>true</required>
        </field>
        <field>
          <name>searchable</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>
            If true, repository will be searchable. If false, the files and artifacts from repository will NOT
            appear on Nexus index, thus will be not searcheable.
          </description>
          <required>true</required>
        </field>
        <field>
          <name>localStorage</name>
          <version>1.4.0+</version>
          <description>
            The local storage definition of repository.
          </description>
          <association>
            <type>CLocalStorage</type>
          </association>
          <required>true</required>
        </field>
        <field>
          <name>remoteStorage</name>
          <version>1.4.0+</version>
          <description>
            The remote storage definition of repository.
          </description>
          <association>
            <type>CRemoteStorage</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>mirrors</name>
          <version>1.4.0+</version>
          <description>
            Repository mirrors to publish downstream.
          </description>
          <association>
            <type>CMirror</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>externalConfiguration</name>
          <version>1.4.0+</version>
          <type>DOM</type>
          <required>false</required>
          <description>Repository implementation's own configuration</description>
        </field>
      </fields>
      <codeSegments>
        <codeSegment>
          <version>1.4.0+</version>
          <code><![CDATA[
    /* A field that "carries" the Configuration modelVersion with object */
    public final String modelVersion = Configuration.MODEL_VERSION;
    
    /* A field to store the default local storage URL */
    public transient String defaultLocalStorageUrl;

    /* A field to store actual external configuration implementation */
    public transient Object externalConfigurationImple;
]]></code>
        </codeSegment>
      </codeSegments>
    </class>

    <class>
      <name>CLocalStorage</name>
      <version>1.4.0+</version>
      <description>
        The local storage definition. If defined, the repository will have own instance of local storage instead
        to use shared
        one.
      </description>
      <fields>
        <field>
          <name>provider</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The provider of the local storage.</description>
          <required>true</required>
        </field>
        <field>
          <name>url</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The URL of the local storage.</description>
          <required>true</required>
        </field>
      </fields>
    </class>

    <class>
      <name>CRemoteStorage</name>
      <version>1.0.0+</version>
      <description>
        The remote storage definition. If URL is only defined, the repository will share one shared remote
        storage instance. If
        any other properties are defined, the repository will own a private repository
        store instance.
      </description>
      <fields>
        <field>
          <name>provider</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The provider of the remote storage.</description>
          <required>true</required>
        </field>
        <field>
          <name>url</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The URL of the remote storage. Mandatory.</description>
          <required>true</required>
        </field>
        <field>
          <name>authentication</name>
          <version>1.4.0+</version>
          <description>
            The remote authentication, if needed to authenticate on remote repository.
          </description>
          <association>
            <type>CRemoteAuthentication</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>connectionSettings</name>
          <version>1.4.0+</version>
          <description>
            The specific connection settings to use when connecting to this repository.
          </description>
          <association>
            <type>CRemoteConnectionSettings</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>inheritHttpProxySettings</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>Should this remote storage inherit the global settings? If true, it will inherit, if false, the proxy defined or none will be used.</description>
          <required>true</required>
        </field>
        <field>
          <name>httpProxySettings</name>
          <version>1.4.0+</version>
          <description>
            The specific HTTP Proxy settings to use when connecting to this repository.
          </description>
          <association>
            <type>CRemoteHttpProxySettings</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>mirrors</name>
          <version>1.4.0+</version>
          <description>
            Repository mirrors configuration for upstream (to use for retrieving stuff).
          </description>
          <association>
            <type>CMirror</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
        </field>
      </fields>
    </class>

