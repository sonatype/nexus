          <association>
            <type>CRepositoryGrouping</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>remoteNexusInstances</name>
          <version>1.4.0+</version>
          <description>The known remote nexus instances.</description>
          <association>
            <type>CRemoteNexusInstance</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>repositoryTargets</name>
          <version>1.4.0+</version>
          <description>The repository targets.</description>
          <association>
            <type>CRepositoryTarget</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>true</required>
        </field>
        <field>
          <name>tasks</name>
