          <association>
            <type>CScheduledTask</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>true</required>
        </field>
        <field>
          <name>smtpConfiguration</name>
          <version>1.4.0+</version>
          <description>SMTP Parameters</description>
          <association>
            <type>CSmtpConfiguration</type>
          </association>
          <required>true</required>
        </field>
        <field>
          <name>errorReporting</name>
          <version>1.4.0+</version>
          <description>Error Reporting Parameters</description>
          <association>
            <type>CErrorReporting</type>
          </association>
          <required>true</required>
        </field>
        <field>
          <name>plugins</name>
          <version>1.4.0+</version>
          <description>Plugins and their configuration</description>
          <association>
            <type>CPlugin</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>notification</name>
          <version>1.4.1+</version>
