    <class>
      <name>CRemoteConnectionSettings</name>
      <version>1.4.0+</version>
      <description>The connections settings defines common connection properties, like retries count and timeouts.</description>
      <fields>
        <field>
          <name>connectionTimeout</name>
          <version>1.4.0+</version>
          <type>int</type>
          <description>HTTP connection timeout in miliseconds.</description>
          <required>true</required>
        </field>
        <field>
          <name>retrievalRetryCount</name>
          <version>1.4.0+</version>
          <type>int</type>
          <description>The count of HTTP request retries in case of failures.</description>
          <required>true</required>
        </field>
        <field>
          <name>queryString</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>Query string to be appended to remote URL.</description>
          <required>false</required>
        </field>
        <field>
          <name>userAgentCustomizationString</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>A user-agent customization to send in HTTP requests, if needed.</description>
          <required>false</required>
        </field>
      </fields>
    </class>

    <class>
      <name>CRemoteHttpProxySettings</name>
      <version>1.4.0+</version>
      <description>The HTTP Proxy defines proxies used to access the internet.</description>
      <fields>
        <field>
          <name>blockInheritance</name>
          <version>1.4.0+</version>
          <type>boolean</type>
          <description>Set to true if you want to block inheritance.</description>
          <required>true</required>
        </field>
        <field>
          <name>proxyHostname</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>THe hostname of HTTP proxy.</description>
          <required>true</required>
        </field>
        <field>
          <name>proxyPort</name>
          <version>1.4.0+</version>
          <type>int</type>
          <description>The port of the HTTP proxy.</description>
          <required>true</required>
        </field>
        <field>
          <name>authentication</name>
          <version>1.4.0+</version>
          <association>
            <type>CRemoteAuthentication</type>
          </association>
          <required>false</required>
        </field>
        <field>
          <name>nonProxyHosts</name>
          <version>1.4.1+</version>
          <description>
            List of addresses that can ignore the proxy settings.</description>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
        </field>
      </fields>
    </class>

    <class>
      <name>CRemoteAuthentication</name>
      <version>1.4.0+</version>
      <description>
        Remote authentication tokens used in remote authentications against HTTP Proxies and/or protected remote
        repositories.
      </description>
      <fields>
        <field>
          <name>username</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The username to authenticate with.</description>
          <required>false</required>
        </field>
        <field>
          <name>password</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The password to authenticate with.</description>
          <required>false</required>
        </field>
        <field>
          <name>ntlmHost</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The host that is origin of NTLM authentication.</description>
          <required>false</required>
        </field>
        <field>
          <name>ntlmDomain</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The NTLM domain to auth against.</description>
          <required>false</required>
        </field>
        <field>
          <name>trustStore</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The path of the trustStore to use in remote authentication (server).</description>
          <required>false</required>
        </field>
        <field>
          <name>trustStorePassword</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The passphrase of the trustStore.</description>
          <required>false</required>
        </field>
        <field>
          <name>keyStore</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The path of the keyStore to use in remote authentication (client).</description>
          <required>false</required>
        </field>
        <field>
          <name>keyStorePassword</name>
          <version>1.4.0+</version>
          <type>String</type>
          <description>The passphrase of the keyStore.</description>
          <required>false</required>
        </field>
      </fields>
    </class>

    <class>
      <name>CRestApiSettings</name>
      <version>1.4.0+</version>
      <description>The REST API Settings.</description>
      <fields>
        <field>
          <name>baseUrl</name>
          <version>1.4.0+</version>
          <type>String</type>
