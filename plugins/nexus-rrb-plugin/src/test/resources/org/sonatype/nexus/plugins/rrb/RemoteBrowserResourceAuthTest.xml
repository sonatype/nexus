<component-set>
	<components>
		<component>
			<role>org.sonatype.jettytestsuite.ServletServer</role>
			<role-hint>default</role-hint>
			<implementation>org.sonatype.jettytestsuite.ServletServer
			</implementation>
			<instantiation-strategy>singleton</instantiation-strategy>
			<configuration>
				<port>${jetty-port}</port>
				<webappContexts>
					<webappContext>
						<name>auth-test</name>
						<authenticationInfo>
							<authMethod>BASIC</authMethod>
							<credentialsFilePath>${basedir}/target/test-classes/realm.properties
							</credentialsFilePath>
						</authenticationInfo>
						<servletInfos>
							<servletInfo>
								<mapping>/*</mapping>
								<servletClass>org.sonatype.nexus.plugins.rrb.ValidHTMLJettyDefaultServlet</servletClass>
								<parameters>
									<property>
										<name>resourceBase</name>
										<value>${resource-base}</value>
									</property>
									<property>
										<name>dirAllowed</name>
										<value>true</value>
									</property>
								</parameters>
							</servletInfo>
						</servletInfos>
					</webappContext>
				</webappContexts>
			</configuration>


		</component>
	</components>
</component-set>